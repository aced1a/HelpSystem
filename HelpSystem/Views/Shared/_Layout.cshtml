<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/css/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <script
        asp-src-include="/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript"
        asp-src-include="/js/CategoryRequests.js"> </script>
     <link rel="stylesheet"
         asp-href-include="/css/Style.css" />
     <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:weight@100;200;300;400;500;600;700;800&display=swap" />
    <title>Info System</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-inverse" role="navigation"> 
        <a class="navbar-brand" asp-action="Index" asp-controller="Home" > Info System </a>
        <div class="collapse navbar-collapse justify-content-end">
            @await Component.InvokeAsync("NavigationBar")
        </div>
     </nav>
     <div class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="collapse navbar-collapse justify-content-center text-center">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
     </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
